{% for block in section.blocks %}
    {% case block.type %}
    {% when "image-with-navigator-text" %}
        <div class="container-{{ section.id }}">
            <div class="img-with-text-wrapper-{{ block.id }}">
                <div class="img-wrapper-{{ block.id }}">
                    <img src="{{ block.settings.image | img_url: "master" }}" class="image-{{ block.id }}">
                </div>
                <div class="text-warpper-{{ block.id }}">
                    <div class="header-style-{{ block.id }}">
                        <h2>Whiting Overshirt </h2>
                    </div>
                    <div class="description-wrapper-{{ block.id }}">
                        {{ block.settings.texts }}
                    </div>
                    <div class="btn-{{ block.id }}">
                        <a href="https://waxlondon.com/collections/winter-sale">Shop The Look</a>
                    </div>
                </div>
            </div>
        </div>
    {% endcase %}
{% endfor %}

<style>
    .container-{{ section.id }}{
        background-color: #F2F2F2;
        width: 100%;
    }
    {% for block in section.blocks %}
        {% case block.type %}
            {% when "image-with-navigator-text" %}
                .img-with-text-wrapper-{{ block.id }}{
                    padding-top: {{ block.settings.padding-top | append: 'px' }};
                    padding-bottom: {{ block.settings.padding-bottom | append: 'px' }};
                    display: flex;
                    width: 100%;
                }
                .image-{{ block.id }}{
                    width: 100%;
                    display: block;
                }
                .img-wrapper-{{ block.id }}, .text-warpper-{{ block.id }}{
                    width: 50%;
                }
                {% if block.settings.width == 'large' %}
                    .img-with-text-wrapper-{{ block.id }}{
                        width: 100%;
                    }
                    div.img-wrapper-{{ block.id }}{
                        width: 60%;
                    }
                    div.text-warpper-{{ block.id }}{
                        width: 40%;
                    }
                {% elsif block.settings.width == 'medium' %}
                    .img-with-text-wrapper-{{ block.id }}{
                        width: 85%;
                        margin: auto;
                    }
                    div.img-wrapper-{{ block.id }}{
                        width: 55%;
                        margin: auto;
                    }
                    div.text-warpper-{{ block.id }}{
                        width: 45%;
                    }
                {% elsif block.settings.width == 'small' %}
                    .img-with-text-wrapper-{{ block.id }}{
                        width: 75%;
                        margin: auto;
                    }
                    div.img-wrapper-{{ block.id }}{
                        width: 50%;
                        margin: auto;
                    }
                    div.text-warpper-{{ block.id }}{
                        width: 50%;
                    }
                {% endif %}
                .img-with-text-wrapper-{{ block.id }} .text-warpper-{{ block.id }} p, .text-warpper-{{ block.id }} a{
                    font-size: {{ block.settings.font-size | append: "px" }};
                    color: {{ block.settings.text-color }};
                    font-family: {{ block.settings.font }};
                    line-height: {{ block.settings.line-height }}px;
                }
                .header-style-{{ block.id }} h2{
                    font-size: {{ block.settings.header-font-size | append: "px" }};
                    color: {{ block.settings.header-text-color }};
                    font-family: {{ block.settings.header-font }};
                    line-height: {{ block.settings.header-line-height }}px;
                }
                div.text-warpper-{{ block.id }} > p{
                    margin: 0;
                    padding-top: 0;
                }
                {% if block.settings.toggle_column == true %}
                    .img-with-text-wrapper-{{ block.id }}{
                        flex-direction: row-reverse;
                    }
                {% endif %}
                .text-warpper-{{ block.id }}{
                    padding: 0 55px;
                    display: flex;
                    flex-direction: column;
                    justify-content: center;
                    background-color: {{ block.settings.color_accent }};
                }
                .btn-{{ block.id }}{
                    margin-top: 30px;
                    display: block;
                    background-color: #333333;
                    width: 150px;
                    border-radius: 25px;
                }
                .btn-{{ block.id }} a{
                    display: block;
                    padding: 13px 15px;
                    text-align: center;
                    color: #FFF;
                    text-decoration: none;
                }
                {% if block.settings.hide-button == true %}
                    .btn-{{ block.id }}{
                        display: none;
                    }
                {% endif %}
            {% endcase %}
    {% endfor %}
</style>

