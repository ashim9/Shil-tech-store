                {
                    "type": "font",
                    "id" : "header-font",
                    "label": "Header font family"
                },
                {
                    "type": "color",
                    "id": "header-text-color",
                    "label": "header text color",
                    "default": "#333333"
                },
                {
                    "type": "range",
                    "label": "Padding Top",
                    "id": "padding-top",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "px",
                    "default": 0
                },
                {
                    "type": "range",
                    "label": "Padding Bottom",
                    "id": "padding-bottom",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "px",
                    "default": 0
                }
        
            ]
        }
    ],
    "presets": [
      {
        "name": "Image With Navigator Text"
      }
    ]
  }
