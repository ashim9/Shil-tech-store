<section class="Single_Img_with_text-wrapper-{{ section.id }}">
  <div class="img-wrapper-{{ section.id }}">
    <img src="{{ section.settings.image | img_url: "master" }}" class="image-{{ section.id }}">
    <div class="text-warpper-{{ section.id }}">
        {{ section.settings.texts }} 
        {% comment %} {{ section.settings.link_label }} {% endcomment %}
         <a class="link" {% if section.settings.link == blank %}role="link" aria-disabled="true"{% else %}href="{{ section.settings.link }}"{% endif %}>{{ section.settings.link_label | escape }}</a>
    </div>
  </div>
</section>

<style>
    .Single_Img_with_text-wrapper-{{ section.id }}{
        width: 100%;
    }
    .image-{{ section.id }}{
        width: 100%;
        display: block;
    }
    {% if section.settings.width == 'Large' %}
        .img-wrapper-{{ section.id }}{
            width: 100%;
        }
    {% elsif section.settings.width == 'medium' %}
        .img-wrapper-{{ section.id }}{
            width: 75%;
            margin: auto;
        }
    {% elsif section.settings.width == 'small' %}
        .img-wrapper-{{ section.id }}{
            width: 50%;
            margin: auto;
        }
    {% endif %}
    {% if section.settings.text_toggle == true %}
        div.text-warpper-{{ section.id }} {
            display: none;
        }
    {% endif %}

    .img-wrapper-{{ section.id }}  .text-warpper-{{ section.id }} p, .img-wrapper-{{ section.id }}  .text-warpper-{{ section.id }} a, .link{
        font-size: {{ section.settings.font-size | append: "px" }};
        color: {{ section.settings.text-color }};
        font-family: {{ section.settings.font }};
        line-height: {{ section.settings.line-height }}px;

    }
    div.text-warpper-{{ section.id }} > p{
        margin: 10px 0;
    }
    .text-warpper-{{ section.id }}{
        width: 100%;
        display: flex;
        gap: 4px;
        flex-wrap: wrap;
        align-items: center;
        justify-content: {{ section.settings.text-alignment }};
    }
</style>

{% schema %}
  {
    "name": "Single Image With Caption",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Single-Image"
        },
        {
            "type": "select",
            "id": "width",
            "label": "Image Width",
            "options": [
            {
                "value": "medium",
                "label": "Medium"
            }, 
            {
                "value": "small",
                "label": "Half Width"
            }, 
            {
                "value": "large",
                "label": "Full Width"
            }
            ],
            "default": "small"
        },
        {
            "type": "checkbox",
            "id": "text_toggle",
            "label": "Hide Text", 
            "default": false
        },
        {
            "type": "richtext",
            "id": "texts",
            "default": "<p>Model wears Whiting Shirt Cosmic Papaya Check with Dean T Shirt Black and Pleat Trousers Black </p>",
            "label": "Text"
        },
        // {
        //   "type": "text",
        //   "id": "link_label",
        //   "label": "link label"
        // },
        // {
        //     "type": "url",
        //     "id": "url_link",
        //     "label": "Url link"
        // },
        
        {
          "type": "text",
          "id": "link_label",
          "label": "link label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "link"
        },

        {
            "type": "select",
            "label": "Text Align",
            "id": "text-alignment",
            "options": [
            {
                "value": "left",
                "label": "Left"
            }, 
            {
                "value": "center",
                "label": "Center"
            }, 
            {
                "value": "right",
                "label": "Right"
            }
            ],
            "default": "left"
        },
        {
            "type": "range",
            "id": "font-size",
            "label": "Change Font Size",
            "min": 12,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 12
        },
        {
            "type": "range",
            "id": "line-height",
            "min": 0,
            "max": 50,
            "step": 1,
            "unit": "px",
            "default": 18,
            "label": "Line height"
        },
       {
            "type": "font",
            "id" : "font",
            "label": "Font-Family"
        },
        {
            "type": "color",
            "id": "text-color",
            "label": "Text Color",
            "default": "#333333"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 40,
            "step": 2,
            "unit": "px",
            "label": "Padding top",
            "default": 0
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 50,
            "step": 2,
            "unit": "px",
            "label": "Padding bottom",
            "default": 0
        }
    ],
    "presets": [
      {
        "name": "Single Image With Caption"
      }
    ]
  }
{% endschema %}