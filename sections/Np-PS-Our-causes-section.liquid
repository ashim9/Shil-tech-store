<style>
    {% for block in section.blocks %}
    {% case block.type %}
    {%- when "image" -%}   
        .img-wrapper{
            width: 100%;
            margin: auto;
        }
        .image-{{ block.id }}{
            width: 100%;
            display: block;
        }
        {% if block.settings.height == 'Large' %}
            .img-wrapper{
                width: 100%;
            }
        {% elsif block.settings.height == 'medium' %}
            .img-wrapper{
                width: 70%;
            }
        {% elsif block.settings.height == 'small' %}
            .img-wrapper{
                width: 40%;
            }
        {% endif %}
    {%- when 'spacer-block' -%}
        .spacer-{{ block.id }}{
            height: {{ block.settings.spacer-height }}px;
        }
    {% when "text-block" %}
        
        .block-{{ block.id }}-width-small{
            max-width: 576px;
            margin: 0 auto;
        }
        .block-{{ block.id }}-width-medium{
            max-width: 576px;
            margin: 0 auto;
        }
        .block-{{ block.id }}-width-small{
            max-width: 1140px;
            margin: 0 auto;
        }
        .block-{{ block.id }}-width-full{
            max-width: 100%;
        }
        .block-{{ block.id }}-width-full p{
            padding: 0 30px;
        }
        .block-{{ block.id }}-width-custom{
            max-width: {{ block.settings.custom-block-width | append: "px" }};
            margin: 0 auto;
        }
        .section-wrapper-{{ section.id }} .text-block-{{ block.id }} p,
        .section-wrapper-{{ section.id }} .text-block-{{ block.id }} a {
            font-size: {{ block.settings.font-size | append: "px" }};
            font-family: {{ block.settings.font }};
            color: {{ block.settings.text-color }};
            line-height: {{ block.settings.line-height }}px;
         }
        .section-wrapper-{{ section.id }} .text-block-{{ block.id }}{
            text-align: center;
        }
    {% endcase %}
    {% endfor %}
</style>

{% for block in section.blocks %}
    {% case block.type %}
    {% when "Heading-and-Description" %}
        <div class="our-causes-wrapper-{{ block.id }}">
            <div class="our-causes-{{ block.id }}">
                {{ block.settings.question-text }}
            </div>
        </div>
    {% endcase %}
{% endfor %}

{% schema %} 
{
    "name": "Our-causes-section",
    "blocks": [
        {
            "name" : "Heading and Description",
            "type" : "Heading-and-Description",
            "settings" :[
                {
                    "type": "text",
                    "id" : "heading",
                    "label" : "Heading",
                    "default": ""
                },
                {
                    "type": "richtext",
                    "id" : "description",
                    "label" : "Description",
                    "default": "<p></p>"
                },
                {
                    "type": "range",
                    "id": "Heading-font-size",
                    "label": "Change Font Size",
                    "min": 12,
                    "max": 100,
                    "step": 1,
                    "unit": "px",
                    "default": 40
                },
                {
                    "type": "range",
                    "id": "description-font-size",
                    "label": "Change Font Size",
                    "min": 12,
                    "max": 50,
                    "step": 1,
                    "unit": "px",
                    "default": 16
                },
                {
                    "type": "range",
                    "id": "line-height",
                    "min": 10,
                    "max": 50,
                    "step": 1,
                    "unit": "px",
                    "default": 28,
                    "label": "Line height"
                },
                {
                    "type": "font",
                    "id" : "font",
                    "label": "Font-Family"
                },
                {
                    "type": "color",
                    "id": "text-color",
                    "label": "Text Color",
                    "default": "#333333"
                }
            ]
        },
        {
            "type": "heading-block",
            "name": "Heading",
            "limit": 1,
            "settings": [            
                {
                    "type": "richtext",
                    "id": "heading",
                    "default": "<p>404 - Page Not Found</p>",
                    "label": "Heading"
                },
                {
                    "type": "select",
                    "label": "Text Size",
                    "id": "heading_size",
                    "options": [
                        {
                        "value": "h2",
                        "label": "Small"
                        },
                        {
                        "value": "h1",
                        "label": "Medium"
                        },
                        {
                        "value": "h0",
                        "label": "Large"
                        }
                    ],
                    "default": "h1"
                },
                {
                    "type": "select",
                    "label": "Text Align",
                    "id": "heading-alignment", 
                    "options": [
                        {
                        "value": "left",
                        "label": "Left"
                        },
                        {
                        "value": "center",
                        "label": "Center"
                        },
                        {
                        "value": "right",
                        "label": "Right"
                        }
                    ],
                    "default": "center"
                }             
            ]
        },
        {
            "type": "spacer-block",
            "name": "Spacer",
            "settings":[
                {
                    "type": "range",
                    "id": "spacer-height",
                    "label": "Spacer Height",
                    "min": 0,
                    "max": 200,
                    "step": 5,
                    "unit": "px",
                    "default": 30
                }
            ]
        },
        {
            "type": "image",
            "name": "Wax Image",
            "settings":[
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Wax-Image"
                },
                {
                    "type": "select",
                    "id": "height",
                    "label": "Image Size",
                    "options": [
                       {
                        "value": "medium",
                        "label": "Medium"
                        },
                        {
                        "value": "small",
                        "label": "Small"
                        },
                        {
                        "value": "large",
                        "label": "Large"
                        }
                    ],
                    "default": "large"
                }
            ]
        }
    ],
    "presets": [
        {
            "name":"wax-blog"
        }
    ]
}
{% endschema %} 