{% for block in section.blocks %}
    {% case block.type %}
    {% when "FAQ-section" %}
        <div class="container-{{ block.id }}">
            <div class="faq-section-wrapper-{{ block.id }}">
                <div class="question-{{ block.id }}">
                    {{ block.settings.question-text }}
                </div>
                <div class="answer-{{ block.id }}">
                    {{ block.settings.answer-text }}
                </div>
            </div> 
        </div>
    {% endcase %}
{% endfor %}
<style>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when "FAQ-section" %}
                 {% if block.settings.width == "small" %}
                    .faq-section-wrapper-{{ block.id }}{
                        width: 50%;
                        max-width: 600px;
                        margin: auto;
                    }
                {% elsif block.settings.width == "medium" %}
                    .faq-section-wrapper-{{ block.id }}{
                        width: 75%;
                        max-width: 967px;
                        margin: auto;
                    }
                {% elsif block.settings.width == "large" %}
                    .faq-section-wrapper-{{ block.id }}{
                        width: 100%;
                        max-width: 1200px;
                        margin: auto;
                    }
                {% endif %}
                .container-{{ block.id }}{
                    background-color: #F2F2F2;
                    width: 100%;
                }
                .question-{{ block.id }} p{
                    font-size: {{ block.settings.font-size | append: "px" }};
                    color: {{ block.settings.question-text-color }};
                    font-family: {{ block.settings.font }};
                    line-height: {{ block.settings.line-height }}px;
                }
                .answer-{{ block.id }} p{
                    font-size: {{ block.settings.font-size | append: "px" }};
                    color: {{ block.settings.answer-text-color }};
                    font-family: {{ block.settings.font }};
                    line-height: {{ block.settings.line-height | append: "px" }};
                    padding-left: 20px;
                    border-left: 3px solid #E6C1A9;
                }
                .faq-section-wrapper-{{ block.id }} p{
                    padding-top: 0;
                }
                .question-{{ block.id }}{
                    padding-top: {{ block.settings.padding-top | append: "px" }};
                    padding-bottom: {{ block.settings.padding-bottom | append: "px" }};
                }
        {% endcase %}
    {% endfor %}
</style>

{% schema %}
  {
    "name": "Single Image With Text",
    "blocks": [
        {
            "name" : "FAQ section",
            "type" : "FAQ-section",
            "settings": [
                {
                    "type": "select",
                    "id": "width",
                    "label": "Section Width",
                    "options": [
                    {
                        "value": "small",
                        "label": "Small"
                    },
                    {
                        "value": "medium",
                        "label": "Medium"
                    },  
                    {
                        "value": "large",
                        "label": "Full Width"
                    }
                    ],
                    "default": "small"
                },
                {
                    "type": "richtext",
                    "id": "question-text",
                    "default": "<p>This is the question, commodo eu quam vel hendrerit. Mauris non turpis fermentum, faucibus nulla quis, convallis nulla?</p>",
                    "label": "Question"
                },
                {
