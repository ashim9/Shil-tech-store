                {
                    "type": "range",
                    "id": "font-size",
                    "label": "Change Font Size",
                    "min": 10,
                    "max": 50,
                    "step": 1,
                    "unit": "px",
                    "default": 15
                },
                {
                    "type": "range",
                    "id": "line-height",
                    "min": 0,
                    "max": 50,
                    "step": 1,
                    "unit": "px",
                    "default": 22,
                    "label": "Line height"
                },
                {
                    "type": "font",
                    "id" : "font",
                    "label": "Font-Family"
                },
                {
                    "type": "color",
                    "id": "question-text-color",
                    "label": "Question Text Color",
                    "default": "#E37730"
                },
                {
                    "type": "color",
                    "id": "answer-text-color",
                    "label": "Answer Text Color",
                    "default": "#333333"
                },
                {
                    "type": "range",
                    "label": "Question: Padding Top",
                    "id": "padding-top",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "px",
                    "default": 0
                },
                {
                    "type": "range",
                    "label": "Question: Padding Bottom",
                    "id": "padding-bottom",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "px",
                    "default": 0
                }
        
            ]
        }
    ],
    "presets": [
      {
        "name": "FAQ Section"
      }
    ]
  }
{% endschema %}